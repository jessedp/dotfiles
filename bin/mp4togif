#!/usr/bin/env bash
set -e
set -u

if [ -z "$1" ]; then
  echo "Usage: $0 <input.mp4>"
  exit 1
fi

input_file="$1"
filename_no_ext="${input_file%.*}"
output_file="${filename_no_ext}.gif"

echo "Converting $input_file to $output_file..."
ffmpeg -i "$input_file" -vf "fps=10,scale=320:-1:flags=lanczos" -c:v gif "$output_file"
echo "Conversion complete."
